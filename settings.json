// 1. settings
// 2. upper right corner / open the text file 
// put the file 
// theme: Dark+ (default theme)
// VSCodium/VSCode
{
    "editor.mouseWheelZoom": true,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "window.zoomLevel": -1,
    // https://stackoverflow.com/questions/32911977/prevent-autocomplete-in-visual-studio-code
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.hover.enabled": false,
    "editor.minimap.enabled": false,
    "editor.parameterHints.enabled": false,
    "editor.quickSuggestions": false,
    "editor.quickSuggestionsDelay": 10,
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggestOnTriggerCharacters": true,
    "editor.wordBasedSuggestions": true,
    "python.pythonPath": "c:\\Program Files\\p\\python.exe",
    "[scala]": {},
    "editor.renderControlCharacters": true,
    "git.enableStatusBarSync": false,
    // https://stackoverflow.com/questions/42780975/visual-studio-code-status-bar-color/43446100#43446100
    "workbench.colorCustomizations": {
        "statusBar.background" : "#1A1A1A",
        "statusBar.noFolderBackground" : "#212121",
        "statusBar.debuggingBackground": "#263238"
    },
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    // https://stackoverflow.com/questions/50177173/how-do-i-get-flake8-to-reliably-ignore-rules-in-vs-code
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore=E402,F841,F401,E302,E305,E501,W291,E111,E265,E261,E114,E266,E121,E509,W293,E221", 
        // W293 - blank line contains whitespace 
        // E221 - multiple spaces before operator
    ],
    "workbench.colorTheme": "Default Light+",
    "editor.fontSize": 20,
    // "python.envFile": "${workspaceFolder}/dev.env"
    // "python.envFile": "C:\\Users\\", 
    "terminal.integrated.fontSize": 24,
    "editor.largeFileOptimizations": false
}

